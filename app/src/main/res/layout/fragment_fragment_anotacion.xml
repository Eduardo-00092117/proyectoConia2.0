<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"

              tools:context=".Fragments.fragment_anotacion">
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:padding="16dp"
                  android:background="@color/oscuro"

                  android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:layout_margin="16dp"
                  android:padding="20dp"
                  android:background="#E6E0E0"
                  android:layout_height="match_parent">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="16dp"

                android:textColor="#000"
                android:text="Titulo"/>

        <EditText android:layout_width="match_parent"
                  android:textSize="20dp"
                  android:id="@+id/titulo_anotacion"
                  android:layout_height="wrap_content"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="#000"
                android:text="Programación"/>

        <Spinner android:layout_width="match_parent"
                 android:id="@+id/sp_programacion"
                 android:layout_height="wrap_content">

        </Spinner>

        <TextView
                android:id="@+id/tv_titulo_anotacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="#000"
                android:text="Anotación"/>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#18bc9c"

        >
            <EditText android:layout_width="match_parent"
                      android:padding="20dp"
                      android:id="@+id/et_archivo"
                      android:gravity="top"
                      android:hint="Escriba su anotacion aqui"
                      android:layout_margin="8dp"
                      android:inputType="text|textMultiLine"
                      android:layout_above="@id/btn_guardarAnotacion"
                      android:background="#E4E4E4"
                      android:layout_height="match_parent"/>

            <Button
                    android:layout_width="wrap_content"
                    android:text="Guardar"
                    android:id="@+id/btn_guardarAnotacion"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="#18bc9c"
                    android:layout_alignParentBottom="true"/>
        </RelativeLayout>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>