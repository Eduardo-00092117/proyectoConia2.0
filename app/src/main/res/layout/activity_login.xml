<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:background="#fff"
              tools:context=".Activities.loginActivity">

    <include layout="@layout/actionsecond"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textColor="@color/oscuro"
                android:drawableTop="@drawable/icon"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/oscuro"
                android:gravity="center"
                android:padding="8dp"
                android:textSize="16dp"
                android:text="Inicia Sesión con tu cuenta del CONIA"/>
            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    app:cardCornerRadius="16dp"
                    android:layout_margin="1dp"
                    android:layout_height="450dp"

                    app:cardBackgroundColor="@color/oscuro">
                <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        app:cardCornerRadius="16dp"
                        android:layout_margin="8dp"
                        android:layout_height="match_parent">
                    <LinearLayout android:layout_width="match_parent"
                                  android:weightSum="1"
                                  android:layout_height="wrap_content">
                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:padding="32dp"
                                android:orientation="vertical">
                            <TextView
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:drawableTop="@drawable/loginbig"/>

                            <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/et_email_login"
                                    android:layout_margin="8dp"
                                    android:singleLine="true"
                                    android:padding="8dp"
                                    android:hint="Email"/>
                            <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="8dp"
                                    android:padding="8dp"
                                    android:id="@+id/et_pass_login"
                                    android:inputType="textPassword"
                                    android:singleLine="true"
                                    android:hint="Password"/>

                            <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="16dp"
                                    android:id="@+id/btn_iniciar_sesion"
                                    android:text="Iniciar Sesión"
                                    android:fontFamily="sans-serif-black"
                                    android:background="#18bc9c"/>

                            <TextView
                                    android:id="@+id/btn_link_registrar"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textColor="#000"
                                    android:padding="8dp"
                                    android:text="No tiene una cuenta. Creala aqui"/>

                            <TextView
                                    android:id="@+id/btn_forget_pass"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="#282C74"
                                    android:gravity="center"
                                    android:padding="8dp"
                                    android:text="¿Olvidaste tu contraseña?"/>

                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>


</LinearLayout>