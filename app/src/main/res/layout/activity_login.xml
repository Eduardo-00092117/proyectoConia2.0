<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".Activities.loginActivity">

    <include layout="@layout/actionsecond"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textColor="@color/oscuro"
                android:drawableTop="@drawable/icon"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/oscuro"
                android:gravity="center"
                android:padding="8dp"
                android:textSize="16dp"
                android:text="Inicia Sesión con tu cuenta del CONIA"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:padding="16dp"
                android:background="#E4E4E4"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/ic_account_circle_black_24dp_2"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_email_login"
                    android:layout_margin="8dp"
                    android:singleLine="true"
                    android:padding="8dp"
                    android:hint="Email"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:padding="8dp"
                    android:id="@+id/et_pass_login"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:hint="Password"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="#7C7C7C"
                    android:id="@+id/btn_iniciar_sesion"
                    android:text="Iniciar Sesión"/>

                <TextView
                    android:id="@+id/btn_link_registrar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#000"
                    android:padding="8dp"
                    android:text="No tiene una cuenta. Creala aqui"/>

                <TextView
                    android:id="@+id/btn_forget_pass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#282C74"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="¿Olvidaste tu contraseña?"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>