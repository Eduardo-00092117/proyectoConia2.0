<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent" android:layout_height="match_parent"

              tools:context=".Fragments.fragment_info_programa">


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >
        <TextView
                android:id="@+id/tv_cerrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="16dp"
                android:visibility="gone"
                android:drawableTop="@drawable/clear"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/tv_cerrar"
                android:orientation="vertical"
                android:padding="16dp">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:textColor="@color/oscuro"
                    android:drawableTop="@drawable/icon"/>
            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    app:cardCornerRadius="16dp"
                    android:layout_below="@id/tv_cerrar"
                    android:layout_margin="1dp"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/colorPrimary">
                <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        app:cardCornerRadius="16dp"
                        android:layout_margin="8dp"
                        android:layout_height="match_parent">
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_margin="10dp"
                            >
                    <TextView
                            android:id="@+id/tv_titulo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"
                            android:text="Titulo"/>
                    <TextView
                            android:id="@+id/tv_lugar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"
                            android:text="Lugar"/>
                    <TextView
                            android:id="@+id/tv_fecha"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"
                            android:text="Fecha"/>
                    <TextView
                            android:id="@+id/tv_hora"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"
                            android:text="Hora"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"
                            android:layout_marginTop="8dp"
                            android:text="Ponentes"/>
                    <TextView
                            android:id="@+id/tv_ponentes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"
                            android:layout_marginTop="8dp"
                            android:text="Listado"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>