<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#fff"
        tools:context=".Activities.MainActivity">


    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/AppBar"
            android:layout_width="match_parent"
            android:layout_height="256dp"
            android:fitsSystemWindows="true">
        <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsingtoolbarviewer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:layout_scrollInterpolator="@android:anim/decelerate_interpolator"
                app:toolbarId="@id/toolbarviewer"
                app:expandedTitleTextAppearance="@style/ExpandedAppBar"
                app:collapsedTitleTextAppearance="@style/CollapsedAppBar"
                app:contentScrim="@color/oscuro">
            <ImageView
                    android:id="@+id/app_bar_image_viewer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside"
                    android:padding="8dp"
                    android:layout_centerInParent="true"
                    app:layout_collapseMode="parallax"
                    android:background="#fff"/>

            <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbarviewer"
                    android:layout_width="match_parent"

                    android:layout_height="?attr/actionBarSize">

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>


    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
            android:padding="8dp">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout
                android:id="@+id/usuariolinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
            <TextView android:layout_width="wrap_content"
                      android:id="@+id/tv_usuario"
                      android:textSize="26dp"
                      android:text=""
                      android:textColor="#F000"
                      android:layout_height="wrap_content"
            android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
        android:layout_below="@id/usuariolinear">


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:orientation="horizontal">
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                    <TextView
                            android:id="@+id/tv_info"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="bottom|center_horizontal"
                            android:drawableTop="@drawable/iconinformacionnolup"
                            android:padding="8dp"
                            android:textColor="#000"
                            android:textSize="16dp"
                            android:onClick="click"
                            android:text="Información"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                    <TextView
                            android:id="@+id/tv_fechas"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="bottom|center_horizontal"
                            android:drawableTop="@drawable/iconcalendariot"
                            android:padding="8dp"
                            android:textSize="16dp"
                            android:onClick="click"
                            android:textColor="#000"
                            android:text="Fechas"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                    <TextView
                            android:id="@+id/tv_patro"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="bottom|center_horizontal"
                            android:drawableTop="@drawable/iconpatrocinio"
                            android:padding="8dp"
                            android:textSize="16dp"
                            android:onClick="click"
                            android:textColor="#000"
                            android:text="Patrocinadores"/>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:orientation="horizontal">
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                    <TextView
                            android:id="@+id/tv_cursos"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="bottom|center_horizontal"
                            android:drawableTop="@drawable/iconcursost"
                            android:padding="8dp"
                            android:textSize="16dp"
                            android:textColor="#000"
                            android:onClick="click"
                            android:text="Cursos"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                    <TextView
                            android:id="@+id/tv_ponen"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="bottom|center_horizontal"
                            android:drawableTop="@drawable/iconponentest"
                            android:padding="8dp"
                            android:textSize="16dp"
                            android:textColor="#000"
                            android:onClick="click"
                            android:text="Ponencias"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                    <TextView
                            android:id="@+id/tv_progra"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:drawableTop="@drawable/iconprogramasiont"
                            android:gravity="bottom|center_horizontal"
                            android:padding="8dp"
                            android:textSize="16dp"
                            android:text="Programa"
                            android:onClick="click"
                            android:textColor="#000"/>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:orientation="horizontal">
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                    <TextView
                            android:id="@+id/tv_contact"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="bottom|center_horizontal"
                            android:drawableTop="@drawable/iconcontact"
                            android:padding="8dp"
                            android:textSize="16dp"
                            android:textColor="#000"
                            android:onClick="click"
                            android:text="Contactanos"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                    <TextView
                            android:id="@+id/tv_iniciar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="bottom|center_horizontal"
                            android:drawableTop="@drawable/iconloginsession"
                            android:padding="8dp"
                            android:textSize="16dp"
                            android:textColor="#000"
                            android:onClick="click"
                            android:text="Iniciar Sesión"/>

                    <TextView
                        android:id="@+id/btn_anotacion"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="bottom|center_horizontal"
                        android:padding="8dp"
                        android:textSize="16dp"
                        android:visibility="gone"
                        android:drawableTop="@drawable/information"
                        android:textColor="#000"
                        android:onClick="click"
                        android:text="Anotaciones"/>

                </LinearLayout>
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_salir"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="bottom|center_horizontal"
                        android:drawableTop="@drawable/iconsalidapuerta"
                        android:padding="8dp"
                        android:textSize="16dp"
                        android:visibility="gone"
                        android:textColor="#000"
                        android:onClick="click"
                        android:text="Cerrar Sesión"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:orientation="horizontal">
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                    <TextView android:layout_width="wrap_content"
                              android:id="@+id/eje_tematico"
                              android:padding="8dp"
                              android:textSize="16dp"
                              android:textColor="#000"
                              android:onClick="click"
                              android:text="Tematicas"
                              android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                </LinearLayout>
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>