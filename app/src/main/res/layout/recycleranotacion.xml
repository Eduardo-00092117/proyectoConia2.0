<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_margin="8dp"
              android:layout_height="wrap_content">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
                android:id="@+id/tv_titulo_anotacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:background="#B9B9B9"
                android:textColor="#000"
                android:padding="8dp"
                android:text="Titulo"/>
        <TextView
                android:id="@+id/tv_ponencia_anotacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="#000"
                android:padding="8dp"
                android:text="Ponencia"/>
        <TextView
                android:id="@+id/tv_hora_fecha_anotacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="#000"
                android:padding="8dp"
                android:text="Hora/Fecha"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_modificar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:padding="8dp"
                android:background="#D3D3D3"
                android:textColor="#1B2D79"
                android:layout_marginRight="16dp"
                android:layout_gravity="right"
                android:text="Modificar"/>
            <TextView
                android:id="@+id/tv_eliminar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:padding="8dp"
                android:background="#D3D3D3"
                android:textColor="#CE2026"
                android:layout_gravity="right"
                android:text="Eliminar"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>